{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "es2016",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "typeRoots": [
      "./types"
    ],
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node"
    ],
    "outDir": "dist/esm/",
    "noEmit": false
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "demo"
  ]
}
